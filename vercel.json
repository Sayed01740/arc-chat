{
    "version": 2,
    "outputDirectory": "frontend/dist",
    "rewrites": [
        {
            "source": "/auth/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/profile/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/messages/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/payment/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/wallet/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/session/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/assets/(.*)",
            "destination": "/frontend/dist/assets/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend/dist/index.html"
        }
    ]
}